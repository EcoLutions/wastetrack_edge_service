# ========================================
# MQTT Configuration
# ========================================
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=edge-service-001
MQTT_USERNAME=
MQTT_PASSWORD=

# ========================================
# Database Configuration
# ========================================
DATABASE_PATH=./data/edge_service.db

# ========================================
# Flask Configuration
# ========================================
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True

# ========================================
# Bluetooth Device Watcher
# ========================================
ENABLE_BLUETOOTH=true
BLUETOOTH_SCAN_INTERVAL_SECONDS=5
BLUETOOTH_WATCHDOG_SECONDS=10

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/edge_service.log